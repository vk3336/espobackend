ESPO_BASE_URL=xxx
ESPO_API_KEY= xxx
ESPO_API_PREFIX=xxx
# Multiple entities (comma-separated)
ESPO_ENTITIES=xxx,xxx

# Fields to fetch from CCollection when populating collection relation
ESPO_COLLECTION_SELECT_FIELDS=id,name,slug,collectionImage1CloudUrl,altTextCollectionImage1,collectionvideoURL,collectionaltTextVideo

# Fields to fetch from CProduct when populating product relation
ESPO_PRODUCT_SELECT_FIELDS=id,name,slug,productImage1CloudUrl,altTextProductImage1,price,salePrice,stockQuantity,sku

# Dynamic API base names (comma-separated)
API_BASE_NAMES=api,xxx

# CORS configuration (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000,xxx-new

# Rate limiting configuration
RATE_LIMIT_MAX_REQUESTS=20
RATE_LIMIT_WINDOW_MS=1000

# Request timeout in milliseconds
REQUEST_TIMEOUT_MS=30000

# Batch processing configuration
POPULATE_BATCH_SIZE=3
POPULATE_BATCH_DELAY_MS=100

# -----------------------------------
# Cache Configuration
# -----------------------------------

# Cache refresh interval in hours (default: 24 hours)
CACHE_REFRESH_INTERVAL_HOURS=24

# Maximum records to fetch per entity (default: 5000)
ESPO_LIST_MAX_TOTAL=5000

# Page size for fetching records (default: 200)
ESPO_LIST_PAGE_SIZE=200

# Entities to cache (comma-separated)
# These entities use TIMED cache with 24-hour TTL and auto-refresh
# Fast responses (10-50ms) with automatic data refresh
# Example: CACHE_ENTITIES=CProduct,CCollection,CBlog
# Leave empty to cache all entities (except NO_CACHE_ENTITIES)
CACHE_ENTITIES=

# Entities with NO cache (comma-separated) - Always Fresh!
# These entities NEVER use cache and always fetch fresh data from EspoCRM
# Slower responses (2-5 seconds) but always 100% up-to-date
# Example: NO_CACHE_ENTITIES=CCustomerAccount,Lead,COrder
# Use this for real-time data that changes frequently
NO_CACHE_ENTITIES=

# -----------------------------------
# Chat Assistant (OpenAI + Catalogue)
# -----------------------------------

# IMPORTANT: Keep this server-side (NEVER expose in React client code).
OPENAI_API_KEY=

# Fast & affordable default. Change if you prefer.
OPENAI_MODEL=gpt-4o-mini

# Response budgeting (lower = faster/cheaper).
OPENAI_MAX_OUTPUT_TOKENS=250

# Product query settings
CHAT_PRODUCT_MAX_SIZE=200
CHAT_MIN_SCORE=10

# Filter catalogue products by merchTags.
# Default behavior matches existing product search: "ecatalogue".
# Disable by setting: CHAT_REQUIRE_MERCHTAG=none
CHAT_REQUIRE_MERCHTAG=ecatalogue

# Lead capture (optional)
CHAT_LEAD_ENTITY=Lead
CHAT_LEAD_ACCOUNT_FIELD=accountName

# -----------------------------------
# IndexNow Scheduler Configuration
# -----------------------------------

# Enable/disable IndexNow scheduler
INDEXNOW_SCHEDULER_ENABLED=true

# IndexNow endpoint
INDEXNOW_ENDPOINT=https://api.indexnow.org/indexnow

# Your ownership key (8-128 chars: a-z A-Z 0-9 and -)
# Generate a random key and create a file named {KEY}.txt on your frontend host
INDEXNOW_KEY=your-generated-key-here

# Your frontend domain (NO protocol)
INDEXNOW_HOST=www.example.com

# Sitemap URL to fetch all URLs from
INDEXNOW_SITEMAP_URL=https://www.example.com/sitemap.xml

# Schedule (cron format) - Default: daily at 2 AM UTC
# Examples:
# Daily at 2 AM: 0 2 * * *
# Every 6 hours: 0 */6 * * *
# Weekly on Sunday at 3 AM: 0 3 * * 0
INDEXNOW_SCHEDULE=0 2 * * *

# Timezone for scheduler (optional)
INDEXNOW_TIMEZONE=UTC

# Run once on startup for testing (optional)
# INDEXNOW_RUN_ON_STARTUP=true

# Frontend URL for building URLs (optional - defaults to https://INDEXNOW_HOST)
# FRONTEND_URL=https://www.example.com


#revalidate 

REVALIDATE_SECRET=theSameSecretAsFrontends

FRONTEND_A_REVALIDATE_URL=https://YOUR-LANDING-SITE/api/revalidate

FRONTEND_B_REVALIDATE_URL=https://YOUR-SHOP-APP/api/revalidate

# -----------------------------------
# OTP Authentication Configuration
# -----------------------------------

# Gmail credentials for sending OTP emails
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# OTP security settings
OTP_SECRET=your-very-long-random-secret-string-here
OTP_TTL_MINUTES=5
OTP_RESEND_COOLDOWN_SECONDS=60
OTP_MAX_FAILS=5

# EspoCRM entity for customer accounts
OTP_ENTITY=CCustomerAccount


